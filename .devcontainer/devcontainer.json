{
    "build": {
        "dockerfile": "Dockerfile",
        "context": "../"
    },
	"postCreateCommand": "npm install && poetry install --sync --all-extras && poetry run pre-commit install --install-hooks && git config gpg.program gpg2",
    "customizations": {
        "vscode": {
            "extensions": [
				"asyncapi.asyncapi-preview",
				"ms-python.python",
				"charliermarsh.ruff",
				"ms-python.black-formatter",
				"redhat.vscode-yaml",
				"tamasfe.even-better-toml",
				"github.vscode-github-actions",
				"ms-azuretools.vscode-docker"
			]
        }
    }
}