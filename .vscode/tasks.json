{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-code",
            "type": "shell",
            "command": "poetry run python build.py",
            "dependsOn": ["poetry-install"]
        },
        {
            "label": "build-code-docs",
            "type": "shell",
            "command": "poetry run python build.py --docs",
            "dependsOn": ["install"]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "poetry build",
            "dependsOn": ["build-code"]
        },
        {
            "label": "pre-commit",
            "type": "shell",
            "command": "poetry run pre-commit run --all-files",
            "dependsOn": ["build-code", "poetry-install-all"]
        },
        {
            "label": "npm-install",
            "command": "npm install",
            "type": "shell"
        },
        {
            "label": "poetry-install",
            "command": "poetry install --sync",
            "type": "shell"
        },
        {
            "label": "poetry-install-all",
            "command": "poetry install --sync --all-extras",
            "type": "shell"
        },
        {
            "label": "install",
            "dependsOn": ["npm-install", "poetry-install-all"]
        },
        {
            "label": "tests",
            "command": "poetry run pytest -v --cov=bell/ --cov-report=html",
            "type": "shell",
            "dependsOn": ["build-code"]
        }
    ]
}